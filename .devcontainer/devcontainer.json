// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/javascript-node

// Remote caching with Turborepo enabled by adding TURBO_TOKEN and TURBO_TEAM as Codespace / GitHub Actions secrets in  repo's GitHub settings.

{
  "name": "Dotfiles Docker Container",
  "build": {
    "dockerfile": "Dockerfile"
  },

  // Configure tool-specific properties.
  "customizations": {
    // Configure properties specific to VS Code.
    "vscode": {
      //"settings": {},
      //"devPort": {},
      // Specify which VS Code extensions to install (List of IDs)
      "extensions": [
        "mgmcdermott.vscode-language-babel",
        "ms-azuretools.vscode-docker",
        "dbaeumer.vscode-eslint",
        "eamodio.gitlens",
        "mhutchie.git-graph",
        "donjayamanne.githistory",
        "GitHub.vscode-pull-request-github",
        "xabikos.JavaScriptSnippets",
        "PKief.material-icon-theme",
        "zhuangtongfa.material-theme",
        "esbenp.prettier-vscode",
        "sibiraj-s.vscode-scss-formatter",
        "jock.svg",
        "SimonSiefke.svg-preview",
        "wayou.vscode-todo-highlight",
        "christian-kohler.npm-intellisense",
        "formulahendry.auto-rename-tag",
        "aaron-bond.better-comments",
        "ms-vscode-remote.remote-containers",
        "mikestead.dotenv",
        "GraphQL.vscode-graphql-syntax",
        "techer.open-in-browser",
        "ms-vscode-remote.remote-ssh",
        "ms-vscode.remote-server",
        "ms-vscode-remote.vscode-remote-extensionpack",
        "ms-vscode.remote-explorer",
        "ms-vscode-remote.remote-wsl",
        "mgmcdermott.vscode-language-babel",
        "anseki.vscode-color",
        "EditorConfig.EditorConfig",
        "yzhang.markdown-all-in-one",
        "christian-kohler.path-intellisense",
        "WallabyJs.quokka-vscode",
        "mrmlnc.vscode-scss",
        "bradlc.vscode-tailwindcss",
        "styled-components.vscode-styled-components",
        "redhat.vscode-yaml",
        "DavidAnson.vscode-markdownlint"
      ]
    }
  },

  "workspaceMount": "source=${localWorkspaceFolder},target=/home/magnus/${localWorkspaceFolderBasename},type=bind",
  "workspaceFolder": "/home/magnus/${localWorkspaceFolderBasename}"

  // Set `remoteUser` to `root` to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
  // "remoteUser": "root",
  // "containerUser": "root"
}
