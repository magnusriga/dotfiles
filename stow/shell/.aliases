#!/usr/bin/env bash

[[ -n "$SHELL_DEBUG" ]] && echo "Loading aliases..."

# ============================================================
# Easier navigation: .., ..., ...., ....., ~ and -
# ============================================================
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."
alias ~="cd ~" # `cd` is probably faster to type though
alias -- -="cd -"

