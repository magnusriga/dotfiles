#!/usr/bin/env bash

[[ -n "$SHELL_DEBUG" ]] && echo "Running .path..."

# ================================================================
# Add User's Private Bin (`~/bin`) to `$PATH`
# ================================================================
if [ -d "$HOME/bin" ]; then
  export PATH="$HOME/bin:$PATH"
fi

# ================================================================
# Add User's Private .local Bin to Path
# ================================================================
if [ -d "$HOME/.local/bin" ]; then
  export PATH="$HOME/.local/bin:$PATH"
fi

# ================================================================
# Add the Global pnpm Store (CAS) to Path.
# ================================================================
export PNPM_HOME="$HOME/.local/share/pnpm"
if [ -d "$HOME/.local/share/pnpm" ]; then
  case ":$PATH:" in
  *":$PNPM_HOME:"*) ;;
  *) export PATH="$PNPM_HOME:$PATH" ;;
  esac
fi

# ================================================================
# Add Bun to Path
# ================================================================
export BUN_INSTALL="$HOME/.bun"
if [ -d "$BUN_INSTALL" ]; then
  export PATH="$BUN_INSTALL/bin:$PATH"
fi

# ================================================================
# Add Cargo to Path
# ================================================================
export CARGO_HOME="$HOME/.cargo"
if [ -d "$CARGO_HOME/bin" ]; then
  export PATH="$CARGO_HOME/bin:$PATH"
fi

# ================================================================
# Add Claude to Path
# ================================================================
export CLAUDE_HOME="$HOME/.claude"
if [ -d "$CLAUDE_HOME/local" ]; then
  export PATH="$CLAUDE_HOME/local:$PATH"
fi

# ================================================================
# Add OpenCode to Path
# ================================================================
export OPENCODE_HOME="$HOME/.opencode"
if [ -d "$OPENCODE_HOME/bin" ]; then
  export PATH="$OPENCODE_HOME/bin:$PATH"
fi

# ================================================================
# Add Homebrew to Path
# Not using Homebrew on Linux.
# ================================================================
# eval "$(/home/linuxbrew/.linuxbrew/bin/brew shellenv)"

# ================================================================
# Add snap binary directory to PATH.
# ================================================================
if [ -d "/snap/bin" ]; then
  export PATH="/snap/bin:$PATH"
fi

# ================================================================
# Add go binary directory to PATH.
# ================================================================
go_bin_dir="$(go env GOPATH)/bin"
if [ -d "$go_bin_dir" ]; then
  export PATH="$go_bin_dir:$PATH"
fi

# ================================================================
# Add fzf binary directory to PATH.
# ================================================================
if [[ ! "$PATH" == *$HOME/.fzf/bin* ]]; then
  export PATH="${PATH:+${PATH}:}$HOME/.fzf/bin"
fi

# ================================================================
# Add `opt/google/chrome` to PATH.
# ================================================================
if [ -d "/opt/google/chrome" ]; then
  case ":$PATH:" in
  *":/opt:"*) ;;
  *) export PATH="/opt/google/chrome:$PATH" ;;
  esac
fi

# ================================================================
# Add OrbStack guest tools to PATH.
# ================================================================
if [ -d "/opt/orbstack-guest/bin" ]; then
  case ":$PATH:" in
  *":/opt/orbstack-guest/bin:"*) ;;
  *) export PATH="/opt/orbstack-guest/bin:$PATH" ;;
  esac
fi

# ================================================================
# Add lua-language-server to PATH.
# ================================================================
if [ -d "$HOME/.local/share/lua-language-server/bin" ]; then
  export PATH="$HOME/.local/share/lua-language-server/bin:$PATH"
fi
